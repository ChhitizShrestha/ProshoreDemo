@{
    ViewBag.Title = "Azure Storage Access Tiers";
}

<div class="container mt-5">
    <h2 class="text-center">Azure Storage Access Tiers</h2>
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Access Tier</th>
                <th scope="col">Optimized For</th>
                <th scope="col">Minimum Storage Duration</th>
                <th scope="col">Storage Cost</th>
                <th scope="col">Access Cost</th>
                <th scope="col">Retrieval Latency</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Hot</td>
                <td>Frequent access</td>
                <td>None</td>
                <td>Highest</td>
                <td>Lowest</td>
                <td>Immediate</td>
            </tr>
            <tr>
                <td>Cool</td>
                <td>Infrequent access (large data sets)</td>
                <td>30 days</td>
                <td>Lower than Hot</td>
                <td>Higher than Hot</td>
                <td>Immediate</td>
            </tr>
            <tr>
                <td>Cold</td>
                <td>Very infrequent access</td>
                <td>90 days</td>
                <td>Lower than Cool</td>
                <td>Higher than Cool</td>
                <td>Immediate</td>
            </tr>
            <tr>
                <td>Archive</td>
                <td>Long-term, rarely accessed data</td>
                <td>180 days</td>
                <td>Lowest</td>
                <td>Highest</td>
                <td>Several hours (delayed)</td>
            </tr>
        </tbody>
    </table>
</div>
