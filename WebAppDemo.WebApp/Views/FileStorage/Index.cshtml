@{
    ViewBag.Title = "File Storage";
}

<h2 class="text-center my-4">Azure File Storage</h2>

<div class="container">
    <!-- Upload Form -->
    <div class="card my-4">
        <div class="card-header">
            <h5>Upload File</h5>
        </div>
        <div class="card-body">
            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="form-inline">
                <div class="form-group">
                    <input type="file" class="form-control" name="file" />
                </div>
                <button type="submit" class="btn btn-primary ml-2">Upload File</button>
            </form>
        </div>
    </div>

    <!-- List of Files -->
    <div class="card">
        <div class="card-header">
            <h5>Stored Files</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in ViewBag.Files)
                    {
                        <tr>
                            <td>@file</td>
                            <td>
                                <a asp-action="Download" asp-route-fileName="@file" class="btn btn-success btn-sm">Download</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
